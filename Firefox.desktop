[Desktop Entry]
Type=Application
Name=Firefox Work
GenericName=Web Browser
Exec=flatpak run org.mozilla.firefox -P work
Icon=firefox
Terminal=false
Categories=Network;WebBrowser;
Keywords=web;browser;internet;firefox-work;firefoxwork;
StartupWMClass=firefox;
Actions=new-window;new-private-window;profile-manager-window;

[Desktop Action new-window]
Name=New window
Exec=flatpak run org.mozilla.firefox -P work --new-window

[Desktop Action new-private-window]
Name=New Private Window
Exec=flatpak run org.mozilla.firefox -P work -private-window 

[Desktop Action profile-manager-window]
Name=Open the Profile Manager
Exec=flatpak run org.mozilla.firefox -P
